LINK_DIRECTORIES(${LIB_PATHS})

ADD_LIBRARY( _oculus SHARED "./avango/oculus/OculusRift.cpp" )

ADD_DEPENDENCIES ( _oculus avango_oculus )

IF (NOT ${LIBRARIES} STREQUAL "")
    TARGET_LINK_LIBRARIES( _oculus debug ${LIBRARIES} avango_daemon optimized ${LIBRARIES} avango_daemon)
    SET_TARGET_PROPERTIES( _daemon PROPERTIES PREFIX "")
ENDIF (NOT ${LIBRARIES} STREQUAL "")

